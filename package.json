{
  "type": "module",
  "scripts": {
    "postinstall": "pnpm --filter ./scripts install && pnpm run build:cli",
    "build:adapter": "node ./scripts/dist/build-adapter.js",
    "build:adapter:debug": "node ./scripts/dist/build-adapter.js --env=development",
    "build:engine": "node ./scripts/dist/build-engine.js",
    "build:engine:debug": "node ./scripts/dist/build-engine.js --env=development",
    "build": "pnpm run build:adapter && pnpm run build:engine",
    "build:debug": "pnpm run build:adapter:debug && pnpm run build:engine:debug",
    "build:cli": "pnpm --filter=./scripts run build",
    "test": "jest"
  },
  "dependencies": {
    "@galacean/engine": "1.3.8",
    "@galacean/engine-physics-lite": "1.3.8",
    "@galacean/engine-physics-physx": "1.3.8",
    "@galacean/engine-shader-lab": "1.3.8",
    "@galacean/engine-spine": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "typescript": "^5.6.2"
  }
}
